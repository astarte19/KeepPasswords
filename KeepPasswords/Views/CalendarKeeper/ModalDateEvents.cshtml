@model List<KeepPasswords.Models.Calendar.CalendarItem>


<div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">События на @ViewBag.Date</h5>
            <a onclick="onCreateEvent('@ViewBag.Date');" class="btn btn-link link-secondary" title="Новое событие">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-calendar-plus" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12.5 21h-6.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v5" /><path d="M16 3v4" /><path d="M8 3v4" /><path d="M4 11h16" /><path d="M16 19h6" /><path d="M19 16v6" /></svg>
            </a>
            <button type="button" class="btn-close" onclick="globalCloseModalReloadCalendar()"></button>
        </div>
        <div class="modal-body">
            @if(Model.Count()>0)
            {
                @foreach (var item in Model)
                {
                    <div class="list-group list-group-flush list-group-hoverable">
                        <div class="list-group-item">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <span class="badge bg-purple text-purple-fg" style="background-color: @item.Color !important;">@item.Date.ToString("HH:mm")</span>                                   
                                </div>
                                <div class="col text-truncate">
                                    <div class=" text-reset">@item.EventName</div>
                                    <div class="text-secondary text-truncate mt-n1">@item.Description</div>
                                </div>
                                <div class="col-auto">
                                    <a style="cursor: pointer;" onclick="onUpdateEvent('@item.ItemId')" class="list-group-item-actions">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon text-secondary icon-tabler icon-tabler-edit" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" /><path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z" /><path d="M16 5l3 3" /></svg>
                                    </a>                                   
                                    <a style="cursor: pointer;" onclick="onDeleteEvent('@item.ItemId','@ViewBag.Date')" class="list-group-item-actions">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon text-secondary icon-tabler icon-tabler-trash-x" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 7h16" /><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" /><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /><path d="M10 12l4 4m0 -4l-4 4" /></svg>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                }
            }
            else
            {
                <span>Нет событий!</span>
            }
                     
        </div>
      
    </div>
</div>