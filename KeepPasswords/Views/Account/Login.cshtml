@model KeepPasswords.Models.Account.LoginViewModel
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
    <title>xEncryption - Вход</title>
    <!-- CSS files -->
    <link href="~/css/dist/css/tabler.min.css?1692870487" rel="stylesheet"/>
    <link href="~/css/dist/css/tabler-flags.min.css?1692870487" rel="stylesheet" />
    <link href="~/css/dist/css/tabler-payments.min.css?1692870487" rel="stylesheet" />
    <link href="~/css/dist/css/tabler-vendors.min.css?1692870487" rel="stylesheet" />
    <link href="~/css/dist/css/demo.min.css?1692870487" rel="stylesheet" />
    <style>
      @@import url('https://rsms.me/inter/inter.css');
      :root {
      	--tblr-font-sans-serif: 'Inter Var', -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif;
      }
      body {
      	font-feature-settings: "cv03", "cv04", "cv11";
      }
    </style>
  </head>
  <body  class=" d-flex flex-column">
    <script src="~/css/dist/js/demo-theme.min.js?1692870487"></script>
    <div class="page page-center">
      <div class="container container-tight py-4">
        <div class="text-center mb-4">
          <a href="." class="navbar-brand navbar-brand-autodark">
                    <a href="." class="navbar-brand navbar-brand-autodark">
                        <img src="~/static/security.svg" width="110" height="32" alt="Tabler" class="navbar-brand-image">
                    </a>
                    <div>
                        <span class="nav-link-title">
                            xEncryption
                        </span>
                    </div>
          </a>
        </div>
        <div class="card card-md">
          <div class="card-body">
            <h2 class="h2 text-center mb-4">Вход в учетную запись</h2>
                    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                        <div asp-validation-summary="ModelOnly"></div>
              <div class="mb-3">
                <label class="form-label">Имя пользователя</label>
                
                            <span asp-validation-for="Email" />
                            <input type="text" class="form-control" placeholder="username" asp-for="Email">
              </div>
              <div class="mb-2">
                <label class="form-label">
                  Пароль
                  <span class="form-label-description">
                    <a href="./forgot-password.html">Забыли пароль?</a>
                  </span>
                </label>
                            <span asp-validation-for="Password" />
                <div class="input-group input-group-flat">
                                <input type="password" class="form-control" placeholder="********" asp-for="Password">
                  <span class="input-group-text">
                    <a href="#" class="link-secondary" title="Show password" data-bs-toggle="tooltip"><!-- Download SVG icon from http://tabler-icons.io/i/eye -->
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" /></svg>
                    </a>
                  </span>
                </div>
              </div>
              <div class="mb-2">
                <label class="form-check">
                                <input type="checkbox" class="form-check-input" asp-for="RememberMe" />
                  <span class="form-check-label">Запомнить меня?</span>
                </label>
              </div>
              <div class="form-footer">
                            <button type="submit" class="btn btn-dark w-100">Войти</button>
              </div>
            </form>
          </div>
         
        
        </div>
        <div class="text-center text-secondary mt-3">
                Нет учетной записи? <a asp-controller="Account" asp-action="Register" method="get" tabindex="-1">Регистрация</a>
        </div>
      </div>
    </div>
    <!-- Libs JS -->
    <!-- Tabler Core -->
    <script src="~/css/dist/js/tabler.min.js?1692870487" defer></script>
    <script src="~/css/dist/js/demo.min.js?1692870487" defer></script>
  </body>
</html>
