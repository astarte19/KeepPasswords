    <script>
        function globalCloseModal() {
            $('#modal_body').hide();
            $("#modal_body").removeClass("show");
        }

        function globalOpenModal() {
            $('#modal_body').show();
            $("#modal_body").addClass("show");
        }

        function AlertValidate(message) {
            $.get('@Url.Action("ShowModalError", "Home")', { message: message }, function (data) {
                $('#modal_body').html(data);
                globalOpenModal();
            });

        }
        function AlertSuccess(message) {
            $.get('@Url.Action("ShowModalSuccess", "Home")', { message: message }, function (data) {
                $('#modal_body').html(data);
                globalOpenModal();
            });

        }

        function showSpinner()
        {
            $.get('@Url.Action("ShowSpinner", "Home")', null, function (data) {
                $('#modal_body').html(data);
                globalOpenModal();
            });
        }

        function hideSpinner()
        {
            $('#modal_body').html('');
            globalCloseModal()
        }

        function onToggleInput(id) {
            var input = document.getElementById(id);
            if (input.type == 'password') {
                if (id == 'notEmptySecretKey') {
                    var btn = document.getElementById('notEmptySecretKey_button');
                    btn.innerText = 'Скрыть';
                }
                input.type = 'text';
            }
            else {
                if (id == 'notEmptySecretKey') {
                    var btn = document.getElementById('notEmptySecretKey_button');
                    btn.innerText = 'Показать';
                }
                input.type = 'password';
            }
        }
    </script>
